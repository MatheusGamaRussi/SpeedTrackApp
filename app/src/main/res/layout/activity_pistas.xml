<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pistas">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:text="@string/pistas"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/black">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:contentDescription="@string/contentdesc"
                    android:elevation="4dp"
                    android:src="@drawable/baku"
                    app:srcCompat="@drawable/baku"
                    tools:ignore="InOrMmUsage" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="1.2in"
                    android:text="@string/baku"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/black">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:contentDescription="@string/contentdesc"
                    android:elevation="3dp"
                    android:src="@drawable/monaco"
                    app:srcCompat="@drawable/monaco"
                    tools:ignore="InOrMmUsage" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="1.2in"
                    android:text="@string/monaco"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/black">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:contentDescription="@string/contentdesc"
                    android:elevation="3dp"
                    android:src="@drawable/Sachsenring"
                    app:srcCompat="@drawable/Sachsenring"
                    tools:ignore="InOrMmUsage" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="1.2in"
                    android:text="@string/sachsenring"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/black">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:contentDescription="@string/contentdesc"
                    android:elevation="3dp"
                    android:src="@drawable/Interlagos"
                    app:srcCompat="@drawable/Interlagos"
                    tools:ignore="InOrMmUsage" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="1.2in"
                    android:text="@string/interlagos"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/black">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:contentDescription="@string/contentdesc"
                    android:elevation="3dp"
                    android:src="@drawable/Suzuka"
                    app:srcCompat="@drawable/Suzuka"
                    tools:ignore="InOrMmUsage" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="1.2in"
                    android:text="@string/suzuka"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/black">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:contentDescription="@string/contentdesc"
                    android:elevation="3dp"
                    android:src="@drawable/al"
                    app:srcCompat="@drawable/al"
                    tools:ignore="InOrMmUsage" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="1.2in"
                    android:text="@string/al"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/black">

                <ImageView
                    android:layout_width="1in"
                    android:layout_height="1in"
                    android:layout_margin="5dp"
                    android:background="@color/black"
                    android:contentDescription="@string/contentdesc"
                    android:elevation="3dp"
                    android:src="@drawable/miami"
                    app:srcCompat="@drawable/miami"
                    tools:ignore="InOrMmUsage" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="1.2in"
                    android:text="@string/miami"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>