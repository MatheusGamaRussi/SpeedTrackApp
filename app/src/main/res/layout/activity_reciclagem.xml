<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:onClick="noticiaCinco"
    tools:context=".ReciclagemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:fontFamily="@font/f1_font_regular"
                android:text="@string/reciclagem"
                android:textAlignment="center"
                android:textColor="@color/bg"
                android:textSize="26sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_margin="7dp"
                app:cardBackgroundColor="@color/bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/f1_font_regular"
                    android:paddingStart="140dp"
                    android:text="@string/noticia_um"
                    android:textAlignment="inherit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />

                <ImageView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentdesc"
                    app:srcCompat="@drawable/noticia_um" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/ruby"
                    android:fontFamily="@font/f1_font_regular"
                    android:onClick="noticiaUm"
                    android:text="@string/vermais"
                    android:textColor="@color/white"
                    android:translationX="235dp"
                    android:translationY="70dp"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_margin="7dp"
                app:cardBackgroundColor="@color/bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/f1_font_regular"
                    android:paddingStart="140dp"
                    android:text="@string/noticia_dois"
                    android:textAlignment="inherit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />

                <ImageView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentdesc"
                    app:srcCompat="@drawable/noticia_dois" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/ruby"
                    android:fontFamily="@font/f1_font_regular"
                    android:onClick="noticiaDois"
                    android:text="@string/vermais"
                    android:textColor="@color/white"
                    android:translationX="235dp"
                    android:translationY="70dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_margin="7dp"
                app:cardBackgroundColor="@color/bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/f1_font_regular"
                    android:paddingStart="140dp"
                    android:text="@string/noticia_tres"
                    android:textAlignment="inherit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />

                <ImageView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentdesc"
                    app:srcCompat="@drawable/noticia_tres" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/ruby"
                    android:fontFamily="@font/f1_font_regular"
                    android:onClick="noticiaTres"
                    android:text="@string/vermais"
                    android:textColor="@color/white"
                    android:translationX="235dp"
                    android:translationY="70dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_margin="7dp"
                app:cardBackgroundColor="@color/bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/f1_font_regular"
                    android:paddingStart="140dp"
                    android:text="@string/noticia_quatro"
                    android:textAlignment="inherit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />

                <ImageView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentdesc"
                    app:srcCompat="@drawable/noticia_quatro" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/ruby"
                    android:fontFamily="@font/f1_font_regular"
                    android:onClick="noticiaQuatro"
                    android:text="@string/vermais"
                    android:textColor="@color/white"
                    android:translationX="235dp"
                    android:translationY="70dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_margin="7dp"
                app:cardBackgroundColor="@color/bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/f1_font_regular"
                    android:paddingStart="140dp"
                    android:text="@string/noticia_cinco"
                    android:textAlignment="inherit"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:ignore="InOrMmUsage,RtlSymmetry" />

                <ImageView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/contentdesc"
                    app:srcCompat="@drawable/noticia_cinco" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/ruby"
                    android:fontFamily="@font/f1_font_regular"
                    android:onClick="noticiaTres"
                    android:text="@string/vermais"
                    android:textColor="@color/white"
                    android:translationX="235dp"
                    android:translationY="70dp"
                    tools:ignore="TextContrastCheck" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>